{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .footer__content-top {
    display: flex;
    flex-wrap: wrap;
    gap: clamp(24px, 4vw, 48px);
  }

  .footer__primary {
    flex: 1 1 50%;
    max-width: 50%;
    display: flex;
    flex-direction: column;
    gap: 1.6rem;
  }

  .footer__secondary {
    flex: 1 1 50%;
    max-width: 50%;
  }

  @media screen and (max-width: 768px) {
    .footer__primary,
    .footer__secondary {
      flex: 1 1 100%;
      max-width: 100%;
    }
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 769px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {%- liquid
    assign has_social_icons = true
    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank and settings.social_linkedin_link == blank
      assign has_social_icons = false
    endif

    if settings.brand_image == blank and settings.brand_headline == blank and settings.brand_description == blank
      assign brand_empty = true
    endif

    if section.blocks.size == 1 and section.blocks[0].type == 'brand_information' and brand_empty and has_social_icons == false and section.settings.newsletter_enable == false and section.settings.enable_follow_on_shop == false
      assign only_empty_brand = true
    endif
  -%}
  {%- if section.blocks.size > 0
    or section.settings.newsletter_enable
    or section.settings.show_social
    and has_social_icons == true
    or section.settings.enable_follow_on_shop
  -%}
    {%- unless only_empty_brand -%}
      {%- assign primary_block = section.blocks.first -%}
      {%- assign secondary_blocks = section.blocks | slice: 1, section.blocks.size -%}
      <div class="footer__content-top page-width">
        <div class="footer__primary">
          {%- if primary_block -%}
            <div
              class="footer-block footer-block--primary{% if primary_block.type == 'link_list' %} footer-block--menu{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {{ primary_block.shopify_attributes }}
              {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: 1;"
              {% endif %}
            >
              {%- if primary_block.settings.heading != blank -%}
                <h2 class="footer-block__heading inline-richtext">{{- primary_block.settings.heading -}}</h2>
              {%- endif -%}

              {%- case primary_block.type -%}
                {%- when '@app' -%}
                  {% render primary_block %}
                {%- when 'text' -%}
                  <div class="footer-block__details-content rte">
                    {{ primary_block.settings.subtext }}
                  </div>
                {%- when 'link_list' -%}
                  <div class="footer-accordion-block">
                      <h2 class="footer-accordion-title">
                        {{ primary_block.settings.heading }}
                      </h2>
                      <div class="footer-accordion-content">
                        {%- if primary_block.settings.menu != blank -%}
                          <ul class="footer-block__details-content list-unstyled">
                            {%- for link in primary_block.settings.menu.links -%}
                              <li>
                                <a
                                  href="{{ link.url }}"
                                  class="link link--text list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
                                >
                                  {{ link.title | escape }}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                      </div>
                  </div>
                {%- when 'brand_information' -%}
                  <div class="footer-block__brand-info">
                    {%- if primary_block.settings.brand_image != blank -%}
                      {%- assign brand_image_height = primary_block.settings.brand_image_width
                        | divided_by: primary_block.settings.brand_image.aspect_ratio
                      -%}
                      <div class="footer-block__image-wrapper">
                        {{
                          primary_block.settings.brand_image
                          | image_url: width: 1100
                          | image_tag:
                            loading: 'lazy',
                            widths: '50, 100, 150, 200, 300, 400, 550, 800, 1100',
                            height: brand_image_height,
                            width: primary_block.settings.brand_image_width
                        }}
                      </div>
                    {%- endif -%}
                    {%- if primary_block.settings.brand_heading != blank -%}
                      <h2 class="footer-block__heading rte">{{ primary_block.settings.brand_heading }}</h2>
                    {%- endif -%}
                    {%- if primary_block.settings.brand_description != blank -%}
                      <div class="rte">{{ primary_block.settings.brand_description }}</div>
                    {%- endif -%}

                    {%- if primary_block.settings.show_social -%}
                      {%- assign platforms = 'facebook,instagram,youtube,tiktok,twitter,pinterest,snapchat,tumblr,vimeo,linkedin' | split: ',' -%}
                      <ul class="footer__list-social list-unstyled">
                        {%- for name in platforms -%}
                          {%- assign url = '' -%}
                          {%- if name == 'facebook' -%}
                            {%- assign url = primary_block.settings.facebook_url | default: settings.social_facebook_link -%}
                          {%- elsif name == 'instagram' -%}
                            {%- assign url = primary_block.settings.instagram_url | default: settings.social_instagram_link -%}
                          {%- elsif name == 'youtube' -%}
                            {%- assign url = primary_block.settings.youtube_url | default: settings.social_youtube_link -%}
                          {%- elsif name == 'tiktok' -%}
                            {%- assign url = primary_block.settings.tiktok_url | default: settings.social_tiktok_link -%}
                          {%- elsif name == 'twitter' -%}
                            {%- assign url = primary_block.settings.twitter_url | default: settings.social_twitter_link -%}
                          {%- elsif name == 'pinterest' -%}
                            {%- assign url = primary_block.settings.pinterest_url | default: settings.social_pinterest_link -%}
                          {%- elsif name == 'snapchat' -%}
                            {%- assign url = primary_block.settings.snapchat_url | default: settings.social_snapchat_link -%}
                          {%- elsif name == 'tumblr' -%}
                            {%- assign url = primary_block.settings.tumblr_url | default: settings.social_tumblr_link -%}
                          {%- elsif name == 'vimeo' -%}
                            {%- assign url = primary_block.settings.vimeo_url | default: settings.social_vimeo_link -%}
                          {%- elsif name == 'linkedin' -%}
                            {%- assign url = primary_block.settings.linkedin_url | default: settings.social_linkedin_link -%}
                          {%- endif -%}
                          {%- if url != blank -%}
                            <li>
                              <a class="link link--text" href="{{ url }}" target="_blank" rel="noopener noreferrer">
                                <span class="social-icon svg-wrapper">
                                  {%- assign icon_name = 'icon-' | append: name | append: '.svg' -%}
                                  {{- icon_name | inline_asset_content -}}
                                </span>
                                <span class="visually-hidden">{{ name | capitalize }}</span>
                              </a>
                            </li>
                          {%- endif -%}
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}

                    {%- if primary_block.settings.show_newsletter -%}
                      <div class="footer-block__newsletter">
                        {%- if primary_block.settings.newsletter_heading != blank -%}
                          <p class="footer-block__heading inline-richtext newsletter-head">{{ primary_block.settings.newsletter_heading }}</p>
                        {%- endif -%}
                        {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                          <input type="hidden" name="contact[tags]" value="newsletter">
                          <div class="newsletter-form__field-wrapper">
                            <div class="field">
                              <div class="newsletter-field">
                                <input id="NewsletterForm--{{ section.id }}" type="email" name="contact[email]" placeholder="{{ 'newsletter.label' | t }}" class="field__input" value="{{ form.email }}" aria-required="true" autocorrect="off" autocapitalize="off" autocomplete="email" {% if form.errors %}autofocus aria-invalid="true" aria-describedby="ContactFooter-error"{% elsif form.posted_successfully? %} aria-describedby="ContactFooter-success"{% endif %} placeholder="{{ 'newsletter.label' | t }}" required>
                                {% comment %} <label class="field__label" for="NewsletterForm--{{ section.id }}">
                                  {{ 'newsletter.label' | t }}
                                </label> {% endcomment %}
                              </div>
                              <div class="newsletter-button">
                                <button type="submit" class="newsletter-form__button field__button" name="commit" id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">Confirm</button>
                              </div>
                            </div>
                            {%- if form.errors -%}
                              <small class="newsletter-form__message form__message" id="ContactFooter-error">
                                <span class="svg-wrapper">
                                  {{- 'icon-error.svg' | inline_asset_content -}}
                                </span>
                                {{- form.errors.translated_fields.email | capitalize }}
                                {{ form.errors.messages.email -}}
                              </small>
                            {%- endif -%}
                          </div>
                          {%- if form.posted_successfully? -%}
                            <h3
                              class="newsletter-form__message newsletter-form__message--success form__message"
                              id="ContactFooter-success"
                              tabindex="-1"
                              autofocus
                            >
                              <span class="svg-wrapper">
                                {{- 'icon-success.svg' | inline_asset_content -}}
                              </span>
                              {{- 'newsletter.success' | t }}
                            </h3>
                          {%- endif -%}
                        {%- endform -%}
                      </div>
                    {%- endif -%}

                {%- if shop.features.follow_on_shop? and section.settings.enable_follow_on_shop -%}
                  <div class="footer__follow-on-shop">
                    {{ shop | login_button: action: 'follow' }}
                  </div>
                {%- endif -%}
                  </div>
                {%- when 'image' -%}
                  <div class="footer-block__details-content footer-block-image {{ primary_block.settings.alignment }}">
                    {%- if primary_block.settings.image != blank -%}
                      {%- assign image_size_2x = primary_block.settings.image_width | times: 2 | at_most: 5760 -%}
                      <div
                        class="footer-block__image-wrapper"
                        style="max-width: min(100%, {{ primary_block.settings.image_width }}px);"
                      >
                        <img
                          srcset="{{ primary_block.settings.image | image_url: width: primary_block.settings.image_width }}, {{ primary_block.settings.image | image_url: width: image_size_2x }} 2x"
                          src="{{ primary_block.settings.image | image_url: width: 760 }}"
                          alt="{{ primary_block.settings.image.alt | escape }}"
                          loading="lazy"
                          width="{{ primary_block.settings.image.width }}"
                          height="{{ primary_block.settings.image.height }}"
                        >
                      </div>
                    {%- else -%}
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                    {%- endif -%}
                  </div>
              {%- endcase -%}
            </div>
          {%- else -%}
            {# Fallback to shop name if no blocks exist #}
            <h2 class="footer-block__heading rte">{{ shop.name }}</h2>
          {%- endif -%}

        </div>

        <div class="footer__secondary">
          {%- if secondary_blocks.size > 0 -%}
            {%- liquid
              if secondary_blocks.size == 9
                assign footer_grid_class = 'grid--3-col-tablet'
              elsif secondary_blocks.size > 6
                assign footer_grid_class = 'grid--4-col-desktop'
              elsif secondary_blocks.size > 4
                assign footer_grid_class = 'grid--3-col-tablet'
              endif
            -%}
            <div
              class="footer__blocks-wrapper grid grid--1-col grid--2-col grid--4-col-tablet {{ footer_grid_class }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {% if settings.animations_reveal_on_scroll %}
                data-cascade
              {% endif %}
            >
              {%- for block in secondary_blocks -%}
                <div
                  class="footer-block grid__item{% if block.type == 'link_list' %} footer-block--menu{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {{ block.shopify_attributes }}
                  {% if settings.animations_reveal_on_scroll %}
                    data-cascade
                    style="--animation-order: {{ forloop.index }};"
                  {% endif %}
                >
                  {%- if block.settings.heading != blank -%}
                    <h2 class="footer-block__heading inline-richtext">{{- block.settings.heading -}}</h2>
                  {%- endif -%}

                  {%- case block.type -%}
                    {%- when '@app' -%}
                      {% render block %}
                    {%- when 'text' -%}
                      <div class="footer-block__details-content rte">
                        {{ block.settings.subtext }}
                      </div>
                    {%- when 'link_list' -%}
                      <div class="footer-accordion-block">
                          <h3 class="footer-accordion-title">
                            {{ block.settings.heading }}
                          </h3>
                          <div class="footer-accordion-content">
                            {%- if block.settings.menu != blank -%}
                              <ul class="footer-block__details-content list-unstyled">
                                {%- for link in block.settings.menu.links -%}
                                  <li>
                                    <a
                                      href="{{ link.url }}"
                                      class="link link--text list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
                                    >
                                      {{ link.title | escape }}
                                    </a>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            {%- endif -%}
                          </div>
                      </div>
                    {%- when 'brand_information' -%}
                      <div class="footer-block__brand-info">
                        {%- if block.settings.brand_image != blank -%}
                          {%- assign brand_image_height = block.settings.brand_image_width
                            | divided_by: block.settings.brand_image.aspect_ratio
                          -%}
                          <div
                            class="footer-block__image-wrapper"
                            style="max-width: min(100%, {{ block.settings.brand_image_width }}px);"
                          >
                            {{
                              block.settings.brand_image
                              | image_url: width: 1100
                              | image_tag:
                                loading: 'lazy',
                                widths: '50, 100, 150, 200, 300, 400, 550, 800, 1100',
                                height: brand_image_height,
                                width: block.settings.brand_image_width
                            }}
                          </div>
                        {%- endif -%}
                        {%- if block.settings.brand_heading != blank -%}
                          <h2 class="footer-block__heading rte">{{ block.settings.brand_heading }}</h2>
                        {%- endif -%}
                        {%- if block.settings.brand_description != blank -%}
                          <div class="rte">{{ block.settings.brand_description }}</div>
                        {%- endif -%}

                        {%- if block.settings.show_social -%}
                          {%- assign platforms = 'facebook,instagram,youtube,tiktok,twitter,pinterest,snapchat,tumblr,vimeo,linkedin' | split: ',' -%}
                          <ul class="footer__list-social list-unstyled">
                            {%- for name in platforms -%}
                              {%- assign url = '' -%}
                              {%- if name == 'facebook' -%}
                                {%- assign url = block.settings.facebook_url | default: settings.social_facebook_link -%}
                              {%- elsif name == 'instagram' -%}
                                {%- assign url = block.settings.instagram_url | default: settings.social_instagram_link -%}
                              {%- elsif name == 'youtube' -%}
                                {%- assign url = block.settings.youtube_url | default: settings.social_youtube_link -%}
                              {%- elsif name == 'tiktok' -%}
                                {%- assign url = block.settings.tiktok_url | default: settings.social_tiktok_link -%}
                              {%- elsif name == 'twitter' -%}
                                {%- assign url = block.settings.twitter_url | default: settings.social_twitter_link -%}
                              {%- elsif name == 'pinterest' -%}
                                {%- assign url = block.settings.pinterest_url | default: settings.social_pinterest_link -%}
                              {%- elsif name == 'snapchat' -%}
                                {%- assign url = block.settings.snapchat_url | default: settings.social_snapchat_link -%}
                              {%- elsif name == 'tumblr' -%}
                                {%- assign url = block.settings.tumblr_url | default: settings.social_tumblr_link -%}
                              {%- elsif name == 'vimeo' -%}
                                {%- assign url = block.settings.vimeo_url | default: settings.social_vimeo_link -%}
                              {%- elsif name == 'linkedin' -%}
                                {%- assign url = block.settings.linkedin_url | default: settings.social_linkedin_link -%}
                              {%- endif -%}
                              {%- if url != blank -%}
                                <li>
                                  <a class="link link--text" href="{{ url }}" target="_blank" rel="noopener noreferrer">
                                    <span class="social-icon svg-wrapper">
                                      {%- assign icon_name = 'icon-' | append: name | append: '.svg' -%}
                                      {{- icon_name | inline_asset_content -}}
                                    </span>
                                    <span class="visually-hidden">{{ name | capitalize }}</span>
                                  </a>
                                </li>
                              {%- endif -%}
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}

                        {%- if block.settings.show_newsletter -%}
                          <div class="footer-block__newsletter">
                            {%- if block.settings.newsletter_heading != blank -%}
                              <p class="footer-block__heading inline-richtext newsletter-head">{{ block.settings.newsletter_heading }}</p>
                            {%- endif -%}
                            {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                              <input type="hidden" name="contact[tags]" value="newsletter">
                              <div class="newsletter-form__field-wrapper">
                                <div class="field">
                                  <input
                                    id="NewsletterForm--{{ section.id }}"
                                    type="email"
                                    name="contact[email]"
                                    class="field__input"
                                    value="{{ form.email }}"
                                    aria-required="true"
                                    autocorrect="off"
                                    autocapitalize="off"
                                    autocomplete="email"
                                    {% if form.errors %}
                                      autofocus
                                      aria-invalid="true"
                                      aria-describedby="ContactFooter-error"
                                    {% elsif form.posted_successfully? %}
                                      aria-describedby="ContactFooter-success"
                                    {% endif %}
                                    placeholder="{{ 'newsletter.label' | t }}"
                                    required
                                  >
                                  <label class="field__label" for="NewsletterForm--{{ section.id }}">
                                    {{ 'newsletter.label' | t }}
                                  </label>
                                  <button
                                    type="submit"
                                    class="newsletter-form__button field__button"
                                    name="commit"
                                    id="Subscribe"
                                    aria-label="{{ 'newsletter.button_label' | t }}"
                                  >
                                    <span class="svg-wrapper">
                                      {{- 'icon-arrow.svg' | inline_asset_content -}}
                                    </span>
                                  </button>
                                </div>
                                {%- if form.errors -%}
                                  <small class="newsletter-form__message form__message" id="ContactFooter-error">
                                    <span class="svg-wrapper">
                                      {{- 'icon-error.svg' | inline_asset_content -}}
                                    </span>
                                    {{- form.errors.translated_fields.email | capitalize }}
                                    {{ form.errors.messages.email -}}
                                  </small>
                                {%- endif -%}
                              </div>
                              {%- if form.posted_successfully? -%}
                                <h3
                                  class="newsletter-form__message newsletter-form__message--success form__message"
                                  id="ContactFooter-success"
                                  tabindex="-1"
                                  autofocus
                                >
                                  <span class="svg-wrapper">
                                    {{- 'icon-success.svg' | inline_asset_content -}}
                                  </span>
                                  {{- 'newsletter.success' | t }}
                                </h3>
                              {%- endif -%}
                            {%- endform -%}
                          </div>
                        {%- endif -%}

                        {%- if shop.features.follow_on_shop? and block.settings.enable_follow_on_shop -%}
                          <div class="footer__follow-on-shop">
                            {{ shop | login_button: action: 'follow' }}
                          </div>
                        {%- endif -%}
                      </div>
                    {%- when 'image' -%}
                      <div class="footer-block__details-content footer-block-image {{ block.settings.alignment }}">
                        {%- if block.settings.image != blank -%}
                          {%- assign image_size_2x = block.settings.image_width | times: 2 | at_most: 5760 -%}
                          <div
                            class="footer-block__image-wrapper"
                            style="max-width: min(100%, {{ block.settings.image_width }}px);"
                          >
                            <img
                              srcset="{{ block.settings.image | image_url: width: block.settings.image_width }}, {{ block.settings.image | image_url: width: image_size_2x }} 2x"
                              src="{{ block.settings.image | image_url: width: 760 }}"
                              alt="{{ block.settings.image.alt | escape }}"
                              loading="lazy"
                              width="{{ block.settings.image.width }}"
                              height="{{ block.settings.image.height }}"
                            >
                          </div>
                        {%- else -%}
                          {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                        {%- endif -%}
                      </div>
                  {%- endcase -%}
                </div>
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endunless -%}
  {%- endif -%}

  <div class="footer__content-bottom{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %}data-cascade{% endif %}>
    <div class="footer__content-bottom-wrapper page-width">
      <div class="footer__column footer__localization isolate">
        {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
          <localization-form>
            {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
              <div>
                <h2 class="caption-large text-body" id="FooterCountryLabel">{{ 'localization.country_label' | t }}</h2>
                {%- render 'country-localization', localPosition: 'FooterCountry' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}

        {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
          <localization-form>
            {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
              <div>
                <h2 class="caption-large text-body" id="FooterLanguageLabel">
                  {{ 'localization.language_label' | t }}
                </h2>
                {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}
      </div>
      <div class="footer__column footer__column--info">
        {%- if section.settings.payment_enable -%}
          <div class="footer__payment">
            <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
            <ul class="list list-payment" role="list">
              {%- for type in shop.enabled_payment_types -%}
                <li class="list-payment__item">
                  {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="footer__content-bottom-wrapper page-width{% if section.settings.enable_country_selector == false and section.settings.enable_language_selector == false %} footer__content-bottom-wrapper--center{% endif %}">
      <div class="footer__copyright caption">
        <small class="copyright__content"
          >&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url -}}
        </small>
        <small class="copyright__content">{{ powered_by_link }}</small>
        {%- if section.settings.show_policy -%}
          <ul class="policies list-unstyled">
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <li>
                  <small class="copyright__content"
                    ><a href="{{ policy.url }}">{{ policy.title | escape }}</a></small
                  >
                </li>
              {%- endif -%}
